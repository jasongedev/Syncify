<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/playlist_list_view"
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/base" />

    <ImageView
        android:id="@+id/playlist_cover"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginStart="20dp"
        android:adjustViewBounds="false"
        app:layout_constraintBottom_toBottomOf="@+id/playlist_list_view"
        app:layout_constraintStart_toStartOf="@+id/playlist_list_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Playlist_name"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Playlist Name"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/playlist_list_view"
        app:layout_constraintEnd_toEndOf="@+id/playlist_list_view"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toEndOf="@+id/playlist_cover"
        app:layout_constraintTop_toTopOf="@+id/playlist_list_view"
        app:layout_constraintVertical_bias="0.515" />
</androidx.constraintlayout.widget.ConstraintLayout>