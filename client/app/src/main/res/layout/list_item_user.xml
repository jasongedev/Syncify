<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/user_container"
        android:layout_width="303dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/search_user" />

    <ImageView
        android:id="@+id/user_isActive"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/user_container"
        app:layout_constraintStart_toStartOf="@+id/user_container"
        app:layout_constraintTop_toTopOf="@+id/user_container"
        app:layout_constraintVertical_bias="0.516"
        app:srcCompat="@drawable/syncify_green" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="37dp"
        android:layout_height="37dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/user_isActive"
        app:layout_constraintEnd_toEndOf="@+id/user_isActive"
        app:layout_constraintStart_toStartOf="@+id/user_isActive"
        app:layout_constraintTop_toTopOf="@+id/user_isActive">

        <ImageView
            android:id="@+id/avatar_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/roboto_bold"
        android:text="Username"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/user_container"
        app:layout_constraintEnd_toEndOf="@+id/user_container"
        app:layout_constraintHorizontal_bias="0.663"
        app:layout_constraintStart_toStartOf="@+id/user_container"
        app:layout_constraintTop_toTopOf="@+id/user_container"
        app:layout_constraintVertical_bias="0.518" />

</androidx.constraintlayout.widget.ConstraintLayout>